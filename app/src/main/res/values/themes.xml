<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.skateTrade" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_500</item>
        <item name="colorAccent">#3CBC18</item>
        <item name="rippleColor">@color/rippleColorBtn</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:screenOrientation">portrait</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="botaoGoogle" parent="@style/Theme.AppCompat.Light">
        <item name="colorControlHighlight">#FBFFFE</item>
        <item name="android:textSize">17sp</item>
        <item name="rippleColor">@color/rippleColorBtn</item>
        <item name="android:radius">10dp</item>
    </style>

    <style name="botaoPadrao" parent="@style/Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/purple_500</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
        <item name="circleRadius">20dp</item>
        <item name="android:radius">20dp</item>
        <item name="rippleColor">@color/rippleColorBtn</item>
    </style>


    <style name="btnRippleColor" parent="@style/Theme.AppCompat.Light">
        <item name="circleRadius">20dp</item>
        <item name="android:radius">20dp</item>
        <item name="rippleColor">@color/rippleColorBtn</item>
    </style>
</resources>